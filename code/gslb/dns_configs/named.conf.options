options {
      directory "/var/cache/bind";
      listen-on { 127.0.0.1; 192.168.1.100; };
      listen-on-v6 { none; };
  
      allow-query { any; };
  
      // 安定動作のため、再帰問い合わせを有効にする
      recursion yes;
      allow-recursion { any; };
  
      // DNSSEC(DNS Security Extensions)検証はシミュレーションでは不要
      dnssec-validation no;
  };
  
